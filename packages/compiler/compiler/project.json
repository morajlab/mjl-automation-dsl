{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/compiler/compiler/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/compiler/compiler",
        "main": "packages/compiler/compiler/src/main.ts",
        "tsConfig": "packages/compiler/compiler/tsconfig.app.json",
        "assets": ["packages/compiler/compiler/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "packages/compiler/compiler/src/environments/environment.ts",
              "with": "packages/compiler/compiler/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "compiler-compiler:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/compiler/compiler/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/compiler/compiler"],
      "options": {
        "jestConfig": "packages/compiler/compiler/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}

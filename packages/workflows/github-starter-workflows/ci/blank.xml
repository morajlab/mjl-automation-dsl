<?xml version="1.0" encoding="UTF-8" ?>

<Workflow>
  <Name>CI</Name>
  <Events>
    <Event>
      <Name>push</Name>
      <Branches>
        <Branch>$default-branch</Branch>
      </Branches>
    </Event>
    <Event>
      <Name>pull_request</Name>
      <Branches>
        <Branch>$default-branch</Branch>
      </Branches>
    </Event>
    <Event>
      <Name>workflow_dispatch</Name>
    </Event>
  </Events>
  <Jobs>
    <Job>
      <Name>Build</Name>
      <RunsOn>ubuntu-latest</RunsOn>
      <Steps>
        <Step>
          <Uses>actions/checkout@v3</Uses>
        </Step>
        <Step>
          <Name>Run a one-line script</Name>
          <Run>echo Hello, world!</Run>
        </Step>
        <Step>
          <Name>Run a multi-line script</Name>
          <Run>
            echo Add other actions to build,
            echo test, and deploy your project.
          </Run>
        </Step>
      </Steps>
    </Job>
  </Jobs>
</Workflow>
